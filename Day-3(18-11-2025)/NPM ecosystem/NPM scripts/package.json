{
  "name": "npm-script-master",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {

    "start": "node index.js",
    "run-file": "node app.js",
    "json": "json-server --watch db.json",
    "dev": "nodemon index.js",
    "hello": "echo \"Hello from npm script!\"",
    "multi": "echo First && echo Second",
    "multi-win": "echo First & echo Second",
    "clean": "rm -rf dist || rmdir /s /q dist",
    "build": "npm run clean && mkdir dist && echo Build Complete!",
    "prebuild": "echo \"Preparing build...\"",
    "postbuild": "echo \"Build finished successfully!\"",
    "dev-env": "NODE_ENV=development node index.js",
    "prod-env": "NODE_ENV=production node index.js",
    "env-cross": "cross-env NODE_ENV=production node index.js",
    "start-all": "npm run clean && npm run build && npm run dev",
    "parallel": "npm-run-all --parallel dev hello",
    "sequence": "npm-run-all clean build start",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "jest",

    "watch": "nodemon --watch src src/app.js",
    "tsc-build": "tsc --project tsconfig.json",
    "minify": "terser src/app.js -o dist/app.min.js",
    "prod": "npm run build && NODE_ENV=production node server.js",
    "commit": "git add . && git commit -m \"Auto Commit\"",


    "format": "prettier --write .",


    "reset": "rm -rf node_modules package-lock.json && npm install",

    "outdated": "npm outdated",

    "update-all": "npx npm-check-updates -u && npm install"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "terser": "^5.0.0"
  }
}
